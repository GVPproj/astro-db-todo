---
import { WorkoutCategories, eq, db } from "astro:db"
const { workout } = Astro.props
const category = await db
  .select()
  .from(WorkoutCategories)
  .where(eq(WorkoutCategories.id, workout.categoryId))
---

<div class="workout-container">
  <form method="POST">
    <input type="hidden" name="formType" value="updateWorkout" />
    <input type="hidden" name="workoutId" value={workout.id} />
    <input type="hidden" name="countValue" value={workout.count} />
    <input type="hidden" name="_method" value="PUT" />
    <div class="workout-item">
      <label>
        <input
          type="checkbox"
          name="checked"
          checked={workout.checked}
          onchange="this.form.submit()"
        />
        <div
          style={{
            display: "flex",
            flexDirection: "column",
            alignItems: "flex-start",
          }}
        >
          <span style={{ fontStyle: "italic" }}
            >{workout.weightPerDumbbell}lbs
          </span>
          <span style={{ fontStyle: "italic" }}>
            {workout.sets} x {workout.reps}
          </span>
        </div>
        <div
          style={{
            display: "flex",
            flexDirection: "column",
            alignItems: "flex-start",
            minWidth: "22ch",
          }}
        >
          <span style={{ fontWeight: 600 }}>{workout.name}</span>
          <span style={{ fontStyle: "italic" }}>Count: {workout.count} </span>
        </div>
      </label>
    </div>
  </form>
  <div
    style={{
      flex: 1,
      display: "flex",
      justifyContent: "flex-end",
    }}
  >
    <form method="POST">
      <input type="hidden" name="formType" value="deleteWorkout" />
      <input type="hidden" name="workoutId" value={workout.id} />
      <input type="hidden" name="_method" value="DELETE" />
      <button type="submit">
        <svg
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="3.5"
            d="M6 18 17.94 6M18 18 6.06 6"></path>
        </svg>
      </button>
    </form>
  </div>
</div>

<style>
  label {
    display: flex;
    gap: 1rem;
    align-items: baseline;
  }
  button {
    display: grid;
    place-content: center;
    width: 1.15em;
    height: 1.15em;
    padding: 0;
    border: 2px solid var(--color-border);
    border-radius: 0.15em;
  }
  button:hover {
    background-color: var(--color-link);
  }
  .workout-item {
    min-width: 20ch;
    margin-right: auto;
  }
  .workout-container {
    display: flex;
    gap: 2rem;
    align-items: center;
    padding: 0.5rem 1.5rem;
    border-radius: 0.5rem;
  }
  .workout-container:hover {
    background-color: var(--color-bg-light);
  }

  .workout-name {
    font-size: 1.25rem;
  }
  .streak {
    font-weight: 600;
    font-style: italic;
  }
  @media (max-width: 768px) {
    .workout-name {
      font-size: 1rem;
    }
  }
</style>
